<aura:component controller="WorkTypeFieldServiceController" implements="flexipage:availableForAllPageTypes,lightning:isUrlAddressable" access="global" >
    <aura:attribute name="workTypeId" type="String" />
    <aura:attribute name="pageReference" type="Object"/>
    <aura:handler name="init" value="{! this }" action="{! c.init }"/>
    <lightning:navigation aura:id="navService"/>
    <aura:attribute name="WorkType" type="WorkType" default="{ 'sobjectType': 'WorkType' }"/>
    <aura:attribute name="ProductRequired" type="ProductRequired" default="{ 'sobjectType': 'ProductRequired' }"/>

    <div class="slds-box slds-box_small slds-theme_shade">
        <div class="page-section page-header slds-align_absolute-center slds-border_bottom slds-m-bottom_xx-large">
            <h1 class="slds-text-heading_medium slds-m-bottom_medium">New Product Required</h1>
        </div>

        <div class="slds-m-top_medium">
            <div class="slds-m-top_medium">
                <label class="slds-form-element__label" for="ProductR"><abbr class="slds-required" title="required">* </abbr>Parent Record</label>
                <force:inputField aura:id="ProductR"  value="{!v.WorkType.Id}" change="{!c.handleChange}" required="true"/>
            </div>
            <div class="slds-m-top_medium">
                <label class="slds-form-element__label" for="ProductR"><abbr class="slds-required" title="required">* </abbr>Product Name</label>
                <force:inputField aura:id="ProductR"  value="{!v.ProductRequired.Product2Id}" change="{!c.handleChange}" required="true"/>
            </div>
            <div class="slds-m-top_medium">
                <label class="slds-form-element__label" for="ProductR">Quantity Required</label>
                <force:inputField aura:id="ProductR" value="{!v.ProductRequired.QuantityRequired}" change="{!c.handleChange}"/>
            </div>
            <div class="slds-m-top_medium slds-m-bottom_xx-large">
                <label class="slds-form-element__label" for="ProductR">Quantity Unit Of Measure</label>
                <force:inputField aura:id="ProductR" value="{!v.ProductRequired.QuantityUnitOfMeasure}" change="{!c.handleChange}"/>
            </div>

        </div>
        <div class="slds-m-top_medium slds-clearfix">
            <div class="slds-float_right">
                <lightning:button variant="brand" label="Next" onclick="{!c.navigateToCmp4}" />
            </div>
        </div>
    </div>


</aura:component>
