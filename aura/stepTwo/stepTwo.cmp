<aura:component implements="flexipage:availableForAllPageTypes,lightning:isUrlAddressable" access="global" >
    <aura:attribute name="title" type="String"/>
    <aura:attribute name="pageReference" type="Object"/>
    <aura:handler name="init" value="{!this}" action="{!c.init}"/>
    <lightning:navigation aura:id="navService"/>

    <div class="slds-box slds-box_small slds-theme_shade">
        <div class="page-section page-header slds-align_absolute-center slds-border_bottom">
            <h1 class="slds-text-heading_medium slds-m-bottom_medium">New Skill Requirement</h1>
        </div>

        <div class="slds-m-top_medium">
            <lightning:recordEditForm aura:id="recordEditForm" objectApiName="SkillRequirement">
                <lightning:messages />
                <lightning:inputField fieldName="RelatedRecordId" />
                <lightning:inputField fieldName="SkillId" />
                <lightning:inputField fieldName="SkillLevel" />
            </lightning:recordEditForm>
        </div>
        <div class="slds-m-top_medium slds-clearfix">
            <div class="slds-float_right">
                <lightning:button variant="brand" type="submit" label="Next" onclick="{!c.navigateToCmp3}" />
            </div>
        </div>
    </div>

</aura:component>